export global Kolory {
    // Bazowe kolory (pojedyncze miejsce do zmiany motywu)
    property <color> base_tlo: #242532;
    property <color> base_obramowanie: #1e1f28;
    property <color> base_hover: #3a3c4d;

    property <color> base_tekst: #cccccc;
    property <color> base_tekst_silny: #ffffff;
    property <color> base_tekst_slabszy: #aaaaaa;

    property <color> base_suwak_tor: #606060;

    // Wyeksportowane tokeny kolorów UI
    // Tła i obramowania
    out property <color> tlo: base_tlo;
    out property <color> obramowanie: base_obramowanie;
    out property <color> hover: base_hover;

    // Teksty
    out property <color> tekst: base_tekst;
    out property <color> tekst_silny: base_tekst_silny;
    out property <color> tekst_slabszy: base_tekst_slabszy;

    // Panele i linie podziału
    out property <color> panel_tlo: base_tlo;
    out property <color> linia_podzialu: base_obramowanie;

    // Menu i zakładki
    out property <color> menu_tlo: base_tlo;
    out property <color> menu_obramowanie: base_obramowanie;
    out property <color> zakladka_tlo: base_tlo;
    out property <color> zakladka_obramowanie: base_obramowanie;
    out property <color> zakladka_aktywna_tlo: base_tlo;
    out property <color> zakladka_aktywna_obramowanie: base_obramowanie;

    // Konsola
    out property <color> konsola_tlo: base_tlo;

    // Suwaki
    out property <color> suwak_tlo: base_tlo;
    out property <color> suwak_tor: base_suwak_tor;
    out property <color> ekspozycja_galka: base_tlo;
    out property <color> ekspozycja_galka_hover: #8080ff;
    out property <color> gamma_galka: base_tlo;
    out property <color> gamma_galka_hover: #ff8080;

    // Pasek postępu
    out property <color> progress_fill: #af4cac;

    // Kanały
    out property <color> kanal_r: #ff8181;
    out property <color> kanal_g: #b0ffb0;
    out property <color> kanal_b: #92d2ff;

    // Inne
    out property <color> przezroczysty: transparent;
}